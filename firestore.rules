service cloud.firestore {
  match /databases/{database}/documents {
  match /venues/{document=**} {
  	allow read;
    allow write: if request.auth != null && isUidInAdminUids(request.auth.uid)
  }
    match /{document=**} {
      allow read, write: if false;
    }
  }
  
